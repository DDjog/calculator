def calculator():
    try:
        num1 = float(input("Enter number1: "))
        num2 = float(input("Enter number2: "))
        operator = input("Enter operator (+, -, /, *): ")

        if operator not in ["+", "-", "/", "*"]:
            raise ValueError("Invalid operator")

        if operator == "+":
            result = num1 + num2
        elif operator == "-":
            result = num1 - num2
        elif operator == "/":
            if num2 == 0:
                raise ZeroDivisionError("Division by zero is not allowed")
            result = num1 / num2
        elif operator == "*":
            result = num1 * num2

        return result
    except ValueError as e:
        return f"Error: {e}"
    except ZeroDivisionError as e:
        return f"Error: {e}"


result = calculator()
print("Result:", result)
